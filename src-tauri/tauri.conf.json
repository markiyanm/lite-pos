{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Lite POS",
  "version": "0.1.0",
  "identifier": "com.litepos.app",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Lite POS",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 680,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "sql": {
      "preload": {
        "db": "sqlite:lite-pos.db"
      }
    },
    "updater": {
      "endpoints": [
        "https://github.com/{{owner}}/lite-pos/releases/latest/download/latest.json"
      ],
      "pubkey": ""
    }
  }
}
